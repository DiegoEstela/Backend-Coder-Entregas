doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body 
         div(class="d-flex  justify-content-center")
            div(class="w-50 p-3")
                table(class="table table-dark  table-striped")
                    thead
                        tr
                            th(scope="col") #
                            th(scope="col") Producto
                            th(scope="col") Precio 
                            th(scope="col") Img
                    
                    tbody
                        each pro in data 
                        tr
                            th=pro.id
                            th=pro.title 
                            

                                a(href="/", class="btn btn-primary m-2", role="button") Ir al inicio  
                                a(href="/form", class="btn btn-primary m-2", role="button") Volver a Formulario
        