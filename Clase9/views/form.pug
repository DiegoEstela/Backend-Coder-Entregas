doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title App con PUG
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css", integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC", crossorigin="anonymous")
    body(class="text-center")
        h1 Formulario 
            h2 Agregar una fruta a la lista 

            form(action="/form", method="post", class="text-center")
                input(type="text", name="title", placeholder="Nombre de la fruta")
                input(type="number", name="price", placeholder="Precio")
                input(type="text", name="thumbnail", placeholder="Url de imagen")
                input(type="submit", value="Agregar")
                br
                
                a(href="/", role="button", class="btn btn-primary m-2") Volver al Home